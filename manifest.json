{
	"name": "SmartPlayer",
	"version": "1.0",
	"manifest_version" : 2,
	"description" : "Test extension",
	"icons": {
	    "16":"icon.png",
	    "48":"icon48.png",
	    "128":"icon128.png"
    },
	"content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery-2.1.4.min.js"]
    }
    ],
  	"background": {
    	"scripts": ["background.js"]

  	},
	"options_page": "option.html",
	"permissions":[
		"tabs",
		"contextMenus",
		"activeTab",
		"http://*/*",
		"https://*/*"
	]
}
