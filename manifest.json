{
	"name": "SmartPlayer",
	"version": "1.0",
	"manifest_version" : 2,
	"description" : "Test extension",
	"icons": {"icon": "icon.png",
			  "16":"icon.png"},
	"browser_action":{
		"default_title": "test",
		"default_icon": "icon.png",
		"default_popup": "popup.html" 
	},
	"content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery-2.1.4.min.js"]
    }
    ],
  	"background": {
    	"scripts": ["background.js"]

  	},
	"options_page": "option.html",
	"permissions":[
		"tabs",
		"contextMenus",
		"activeTab",
		"http://*/*",
		"https://*/*"
	]
}
